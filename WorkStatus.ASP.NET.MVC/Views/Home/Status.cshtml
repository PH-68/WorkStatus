@{
    ViewBag.Title = "Status now";
    Dictionary<string, string> dictionary = ViewBag.Dictionary;
    List<bool> IsClosuresWorking = ViewBag.IsClosuresWorking;
    List<SelectListItem> Citys = ViewBag.Citys;
    string TempClass = "";
}
<h2 class="text-center">@ViewBag.Title</h2>
@for (int i = 0; i < dictionary.Count; i++)
{
    if (IsClosuresWorking[i])
    {
        TempClass = "border border-warning";
    }
    else
    {
        TempClass = "border border-success";
    }
    <a class="card @TempClass form-group text-dark" href="/Home/Status/@i " style="cursor: inherit;">
        <div class="card-body">
            <div class="h5 card-title">@dictionary.Keys.ElementAt(i)</div>
            <div class="h6 card-text">@dictionary[dictionary.Keys.ElementAt(i)]</div>
        </div>
    </a>
}
<select id="Citys" name="Citys" onchange="onChange(this)">
    <option value="0">Keelung City</option>
    <option value="1">Taipei City</option>
    <option value="2">New Taipei City</option>
    <option value="3">Taoyuan City</option>
    <option value="4">Hsinchu City</option>
    <option value="5">Hsinchu County</option>
    <option value="6">Miaoli County</option>
    <option value="7">Taichung  City</option>
    <option value="8">Changhua County</option>
    <option value="9">Yunlin County</option>
    <option value="10">Nantou county</option>
    <option value="11">Chiayi City</option>
    <option value="12">Chiayi County</option>
    <option value="13">Tainan City</option>
    <option value="14">Kaohsiung City</option>
    <option value="15">Pingtung County</option>
    <option value="16">Yilan County</option>
    <option value="17">Hualien County</option>
    <option value="18">Taitung County</option>
    <option value="19">Penghu County</option>
    <option value="20">Lienchiang County</option>
</select>
